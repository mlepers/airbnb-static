<div class="container">

<h1>Flats</h1>

  

    <div class="row">
    <% @flats.each do |flat|  %>
  
      <div class="col-3">
        <div class="card mb-3" style="width: 18rem;">
          <img src="<%=flat["imageUrl"]%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= flat["name"] %></h5>
          
            <%= link_to "More info", flat_path(flat["id"]), class:"btn btn-primary"  %>
          
          </div>
        </div>
      </div>

    <% end %>

    </div>  
  
</div>





